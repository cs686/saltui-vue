$white = $basic-100

.{$prefix}-slide-nav
  position absolute
  bottom 0px
  width 100%
  height 30px
  padding 0 16px
  z-index 1
  .{$prefix}-slide-nav-name-item
    color #fff
    font-size 14px
    line-height 30px
  .{$prefix}-slide-nav-item
    width 6px
    height 6px
    border-radius 3px
    background-color rgba(255,255,255,.3)
    opacity 1
    transition width linear .4s
    margin 0 4px
    &.active
      background-color $white
      width 10px

.{$prefix}-slide-nav-name-wrap
  justify-content: space-between;
  padding 0 15px
