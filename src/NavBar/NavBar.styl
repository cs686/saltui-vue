.{$prefix}-nav-bar {
    width: 100%;
    height: 50px;
    line-height: 50px;
    background: $brand-primary;
    color: $white;
    position: fixed;
    top: 0;
    left: 0;
}

.{$prefix}-nav-bar-left {
    display: inline-block;
    font-size: $font-size-t4;
}

.{$prefix}-nav-bar-left-option {
    float: left;
}

.{$prefix}-nav-bar-arrow-left {
    margin-top: 8px;
    margin-left: 5px;
    margin-right: -8px;
    float: left;
    svg {
        fill: $white;
    }
}

.{$prefix}-nav-bar-close {
    display: inline-block;
    margin-left: 15px;
}

.{$prefix}-nav-bar-center {
    font-size: $font-size-t5;
    width: 110px;
    display: inline-block;
    white-space: nowrap;
    position: absolute;
    left: 50%;
    margin-left: -55px;
}

.{$prefix}-nav-bar-right {
    display: inline-block;
    font-size: $font-size-t4;
    float: right;
}

.{$prefix}-nav-bar-right-text {
    padding-right: 16px;
    display: inline-block;
}
